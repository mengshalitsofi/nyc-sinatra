<form action='/figures/<%=@figure.id%>' method='post'>
    <input type="hidden" name="_method" value="patch">
    Name <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"><br>
    <h3>Titles</h3>
    <% @titles.each do |t| %>
    <input type="checkbox" id="title_<%= t.id%>" value="<%= t.id%>" name="figure[title_ids][]" checked="<%=@figure.title_ids.include?(t.id)%>"><%= t.name %></input><br>
    <%end%>
    <h3>Create New Title</h3>
    <input type="text" name="title[name]" id="new_title">
    <h3>Landmarks</h3>
    <% @landmarks.each do |l| %>
    <input type="checkbox" id="landmark_<%= l.id%>" value="<%= l.id%>" name="figure[landmark_ids][]" checked="<%=@figure.landmark_ids.include?(l.id)%>"><%= l.name %></input><br>
    <%end%>
    <h3>Create New Landmark</h3>
    <input type="text" name="landmark[name]" id="new_landmark">
    <input type="text" name="landmark[year_completed]">

    <input type="submit" name="submit" value="Edit Figure">
</form>